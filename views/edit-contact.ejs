<div class="row">
  <div class="col-md-6">
    <h2 class="mb-3"><%= title; %></h2>
    <% if(typeof errors != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
    <% } %>
    <form action="/contacts/update" method="post">
      <input type="hidden" name="oldName" value="<%= contact.oldName || contact.name %>" />
      <div class="mb-3">
        <label for="nama" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= contact.name %>" required />
      </div>
      <div class="mb-3">
        <label for="nohp" class="form-label">No HP</label>
        <input type="text" class="form-control" name="mobile" id="mobile" value="<%= contact.mobile %>" required />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" id="email" value="<%= contact.email %>" />
      </div>
      <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
    </form>
  </div>
</div>
